        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/abel_regular"
        android:hint="Nome"
        android:textColorHint="@color/gray"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Confirm_Registration_Surname"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmed_surname"
        app:layout_constraintEnd_toEndOf="@+id/confirmed_surname"
        app:layout_constraintStart_toStartOf="@+id/confirmed_surname" />

