    <TextView
        android:id="@+id/confirmed_surname"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/abel_regular"
        android:hint="Cognome"
        android:textColorHint="@color/gray"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/confirmed_name"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Confirm_Registration_Username"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmed_username"
        app:layout_constraintEnd_toEndOf="@+id/confirmed_username"
        app:layout_constraintStart_toStartOf="@+id/confirmed_username" />

    <TextView
        android:id="@+id/confirmed_username"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/abel_regular"
        android:hint="Username"
        android:textColorHint="@color/gray"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="@+id/confirmed_surname"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_surname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Confirm_Registration_Mail"
        app:layout_constraintHorizontal_bias="0"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/confirmed_email"
        app:layout_constraintEnd_toEndOf="@+id/confirmed_email"
        app:layout_constraintStart_toStartOf="@+id/confirmed_email" />

    <TextView
        android:id="@+id/confirmed_email"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/abel_regular"
        android:hint="Email"

        android:textColorHint="@color/gray"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/confirmed_username"
        app:layout_constraintTop_toBottomOf="@+id/confirmed_username" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abel_regular"
        android:text="@string/Confirm_Registration_Text"
        android:textAlignment="center"
        android:textColor="#EEE"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
